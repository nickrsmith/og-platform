{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false,
    "tsConfigPath": "tsconfig.build.json"
  },
  "monorepo": true,
  "projects": {
    "admin-service": {
      "type": "application",
      "root": "apps/admin-service",
      "entryFile": "main",
      "sourceRoot": "apps/admin-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/admin-service/tsconfig.app.json",
        "assets": [
          {
            "include": "../../../libs/common/src/modules/email/templates/**/*.html",
            "outDir": "./dist/apps/admin-service/libs/common/src/",
            "watchAssets": true
          }
        ]
      }
    },
    "blockchain-service": {
      "type": "application",
      "root": "apps/blockchain-service",
      "entryFile": "main",
      "sourceRoot": "apps/blockchain-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/blockchain-service/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "config": {
      "type": "library",
      "root": "libs/config",
      "entryFile": "index",
      "sourceRoot": "libs/config/src",
      "compilerOptions": {
        "tsConfigPath": "libs/config/tsconfig.lib.json"
      }
    },
    "core-api": {
      "type": "application",
      "root": "apps/core-api",
      "entryFile": "main",
      "sourceRoot": "apps/core-api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/core-api/tsconfig.app.json",
        "assets": [
          {
            "include": "../../../libs/common/src/modules/email/templates/**/*.html",
            "outDir": "./dist/apps/core-api/libs/common/src/",
            "watchAssets": true
          }
        ]
      }
    },
    "database": {
      "type": "library",
      "root": "libs/database",
      "entryFile": "index",
      "sourceRoot": "libs/database/src",
      "compilerOptions": {
        "tsConfigPath": "libs/database/tsconfig.lib.json"
      }
    },
    "ipfs-service": {
      "type": "application",
      "root": "apps/ipfs-service",
      "entryFile": "main",
      "sourceRoot": "apps/ipfs-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/ipfs-service/tsconfig.app.json"
      }
    },
    "kms-service": {
      "type": "application",
      "root": "apps/kms-service",
      "entryFile": "main",
      "sourceRoot": "apps/kms-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/kms-service/tsconfig.app.json"
      }
    }
  }
}
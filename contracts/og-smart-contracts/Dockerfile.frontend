    # Lightweight frontend server
FROM python:3.9-alpine

WORKDIR /app

# Copy frontend files
COPY frontend/ ./frontend/
COPY deployments/ ./deployments/

# Install a simple file watcher for auto-reload (optional)
RUN pip install watchdog

# Expose port
EXPOSE 3000

# Serve frontend
CMD ["python", "-m", "http.server", "3000", "--directory", "frontend"]